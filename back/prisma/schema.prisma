generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB")
}

model User{
    id String  @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    password String
    name String
    lastname String
    habit Habit[]
}

model Habit {
  id String  @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  titulo String // no es typescript, es prisma
  descripcion String?
  category String

}

